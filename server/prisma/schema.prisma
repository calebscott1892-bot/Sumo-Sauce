generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model EntityRecord {
  entity    String
  id        String
  data      Json
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@id([entity, id])
  @@index([entity])
}

model EntityCounter {
  entity String @id
  value  Int
}
